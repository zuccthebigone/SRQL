{
	"compilerOptions": {
		"incremental": true,
		"declaration": true,
		"target": "ESNext",
		"module": "CommonJS",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"composite": true
	},
	"compileOnSave": true
}
